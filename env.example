# Configuración de Supabase
# Obtén estas credenciales desde tu proyecto de Supabase > Settings > API

# URL del proyecto de Supabase
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co

# Clave pública (anon key) - segura para usar en el frontend
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key-aqui

# Clave de servicio (service role key) - MANTÉN SECRETA, solo para backend
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key-aqui

# Configuración de Email (Gmail)
# Para usar Gmail, necesitas crear una "App Password" en tu cuenta de Google
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-app-password

# URL de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Configuración de Seguridad
JWT_SECRET=tu-jwt-secret-aqui
ENCRYPTION_KEY=tu-clave-encriptacion-aqui
RATE_LIMIT_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Configuración de Logging
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Configuración de Base de Datos
DB_POOL_SIZE=10
DB_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# Configuración de Monitoreo
MONITORING_ENABLED=false
METRICS_ENABLED=false
ALERT_EMAIL=admin@ejemplo.com

# Nota: Este archivo es solo un ejemplo. 
# Crea un archivo .env.local con tus credenciales reales
# NUNCA subas .env.local al repositorio

